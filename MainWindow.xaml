<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        xmlns:local="clr-namespace:WPF_LiveChart_MVVM"
        xmlns:ViewModel="clr-namespace:WPF_LiveChart_MVVM.ViewModel" x:Class="WPF_LiveChart_MVVM.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <ComboBox ItemsSource="{Binding _serialViewModel.SerialPorts}" SelectedItem="{Binding _serialViewModel.SelectedSerialPort}" Margin="45,32,602,355"/>
        <ComboBox ItemsSource="{Binding _serialViewModel.SerialBaudRate}" SelectedItem="{Binding _serialViewModel.SelectedSerialBaudRate}" HorizontalAlignment="Left" Margin="47,110,0,0" VerticalAlignment="Top" Width="153" Height="46"/>
        <Button Command="{Binding _serialViewModel.SerialCommand}" Content="{Binding _serialViewModel.SerialAvailable}" Margin="47,185,605,190"/>
        <TextBox TextWrapping="Wrap" Text="{Binding _serialViewModel.Data}" Margin="271,21,212,70"/>
        <oxy:PlotView Model="{Binding _oxyPlotViewModel._plotHumidityModel}" Margin="602,21,32,66"/>
        <Button Command="{Binding _serialViewModel.MysqlCommand}" Margin="66,266,605,54"/>
    </Grid>
</Window>
